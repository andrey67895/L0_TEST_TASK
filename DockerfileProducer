# Build stage
FROM golang:1.24-alpine AS builder

WORKDIR /app

## Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -o /app/build/l0tasktestproducer ./cmd/app/producer

# Final stage
FROM scratch

WORKDIR /app

# Copy the binary from builder
COPY --from=builder /app/build/l0tasktestproducer /app/l0tasktestproducer
COPY --from=builder /app/config/config.yaml /app/config/config.yaml

EXPOSE 80

CMD ["./l0tasktestproducer"]
